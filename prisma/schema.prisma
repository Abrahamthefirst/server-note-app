generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  username String
  hashed_password String?
  google_id String?
  email String @unique
  email_verified Boolean @default(false)
  picture String?
  phone_number String? @unique
  refresh_token String?
  role Role? @default(VIEWER)
  directory Directory[]
  notes Note[]
  tags Tag[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Directory{
  id String  @id @default(uuid())
  name String
  notes Note[]
  userId String
  user User? @relation(fields: [userId], references: [id])
  parent Directory? @relation("DirectoryToDirectory", fields: [parentId], references: [id])
  parentId String?
  subdirectories  Directory[] @relation("DirectoryToDirectory")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Note{
  id Int  @id @default(autoincrement())
  title String
  body String
  status Boolean
  user User @relation(fields: [creatorId], references: [id])
  folder Directory? @relation(fields: [folderId], references: [id])
  tags Tag[]
  creatorId String
  folderId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Tag{
  id Int  @id @default(autoincrement())
  name String @unique
  notes Note[]
  user User @relation(fields: [creatorId], references: [id])
  creatorId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


enum Role{
  ADMIN
  EDITOR
  VIEWER
}